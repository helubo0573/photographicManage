<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- sys_menu表:自动发布产品编号模块 -->
<mapper namespace="com.heav.photographic.core.mapper.SysMenuMapper">
    <!--返回Map-->        
    <resultMap id="BaseResultMap" type="com.heav.photographic.core.domain.SysMenu">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="menu_name" property="menuName" jdbcType="VARCHAR" />
        <result column="parent_id" property="parentId" jdbcType="INTEGER" />
        <result column="icon_code" property="iconCode" jdbcType="VARCHAR" />
        <result column="sort" property="sort" jdbcType="INTEGER" />
        <result column="remarks" property="remarks" jdbcType="VARCHAR" />
    </resultMap>
    
    <!--基本的sql查询字段 公共引用...-->
    <sql id="Base_Column_List">
        id,menu_name,parent_id,icon_code,sort,remarks 
    </sql>
    
    <!-- 基本的sql查询条件公共引用 -->
    <sql id="searchBy">
        <trim prefix="where" prefixOverrides="and|or">
            <if test=" id != null and id != '' ">
                id  = #{id,jdbcType=INTEGER}
            </if>
            <if test="menuName != null and menuName != '' ">
                and menu_name = #{menuName,jdbcType=VARCHAR}
            </if>
            <if test="parentId != null and parentId != '' ">
                and parent_id = #{parentId,jdbcType=INTEGER}
            </if>
            <if test="iconCode != null and iconCode != '' ">
                and icon_code = #{iconCode,jdbcType=VARCHAR}
            </if>
            <if test="sort != null and sort != '' ">
                and sort = #{sort,jdbcType=INTEGER}
            </if>
            <if test="remarks != null and remarks != '' ">
                and remarks = #{remarks,jdbcType=VARCHAR}
            </if>
        </trim>
    </sql>
    
    
    <insert id="save" parameterType="com.heav.photographic.core.domain.SysMenu">
        insert into sys_menu(menu_name,parent_id,icon_code,sort,remarks)values(#{menuName,jdbcType=VARCHAR},#{parentId,jdbcType=INTEGER},#{iconCode,jdbcType=VARCHAR},#{sort,jdbcType=INTEGER},#{remarks,jdbcType=VARCHAR})
    </insert>

    
    <update id="update" parameterType="com.heav.photographic.core.domain.SysMenu">
        update sys_menu set 
            menu_name = #{menuName,jdbcType=VARCHAR},
            parent_id = #{parentId,jdbcType=INTEGER},
            icon_code = #{iconCode,jdbcType=VARCHAR},
            sort = #{sort,jdbcType=INTEGER},
            remarks = #{remarks,jdbcType=VARCHAR}
        where id = #{id ,jdbcType=INTEGER}
    </update>


    <update id="updateSelective"  parameterType="java.util.HashMap">
        update sys_menu
          <set>
            <if test="menuName != null and menuName != '' ">        
                menu_name = #{menuName,jdbcType=VARCHAR},                
            </if>
            <if test="parentId != null and parentId != '' ">        
                parent_id = #{parentId,jdbcType=INTEGER},                
            </if>
            <if test="iconCode != null and iconCode != '' ">        
                icon_code = #{iconCode,jdbcType=VARCHAR},                
            </if>
            <if test="sort != null and sort != '' ">        
                sort = #{sort,jdbcType=INTEGER},                
            </if>
            <if test="remarks != null and remarks != '' ">        
                remarks = #{remarks,jdbcType=VARCHAR}                
            </if>
        </set>    
        where id = #{id ,jdbcType=INTEGER}
    </update>


    <select id="findByPrimary" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List" />
        from sys_menu
        where id = #{id,jdbcType=INTEGER}
    </select>

	<select id="findSelective" resultMap="BaseResultMap" parameterType="java.util.HashMap">
        select
        <include refid="Base_Column_List" />
        from sys_menu
        <include refid="searchBy"/>
    </select>
               
    <select id="listSelective" resultMap="BaseResultMap" parameterType="java.util.HashMap">
        select
        <include refid="Base_Column_List" />
        from sys_menu
        <include refid="searchBy"/>
    </select>
    
    <select id="getMenuByUserName" parameterType="String" resultMap="BaseResultMap">
    	select *
    	from sys_menu
    </select>
    
    <select id="getAllmenu" resultMap="BaseResultMap">
    	select *
    	from sys_menu
    </select>
</mapper>
